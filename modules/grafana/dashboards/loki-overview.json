{
  "annotations": { "list": [] },
  "editable": false,
  "graphTooltip": 1,
  "panels": [
    {
      "title": "Log Volume (all namespaces)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace) (count_over_time({namespace=~\".+\"}[1m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Logs",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "fixed", "fixedColor": "red" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (namespace) (count_over_time({namespace=~\".+\"} |~ \"(?i)error|panic|fatal|exception\" [1m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Warning Logs",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "fixed", "fixedColor": "yellow" } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum by (namespace) (count_over_time({namespace=~\".+\"} |~ \"(?i)warn\" [1m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Loki Ingestion Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(loki_distributor_bytes_received_total[5m]))",
          "legendFormat": "Ingestion Rate",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Loki Lines Ingested/s",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(loki_distributor_lines_received_total[5m]))",
          "legendFormat": "Lines/s",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Loki Request Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (route, status_code) (rate(loki_request_duration_seconds_count{status_code=~\"5..\"}[5m]))",
          "legendFormat": "{{route}} ({{status_code}})",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Recent Error Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 32 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{namespace=~\".+\"} |~ \"(?i)error|panic|fatal|exception\"",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["loki", "logs"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Loki - Logs Overview",
  "uid": "loki-logs-overview"
}
