{
  "annotations": { "list": [] },
  "editable": false,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Cluster CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "min": 0, "max": 1 },
        "overrides": []
      },
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "legendFormat": "Cluster CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cluster Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "bytes" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes)",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "sum(node_memory_MemTotal_bytes)",
          "legendFormat": "Total",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Pods by Namespace",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace) (kube_pod_info)",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Pod Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Pods Not Ready",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=~\"Pending|Failed|Unknown\"})",
          "legendFormat": "Not Ready",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Node Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }] } },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(kube_node_info)",
          "legendFormat": "Nodes",
          "refId": "A"
        }
      ]
    },
    {
      "title": "CPU Usage by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace) (rate(container_cpu_usage_seconds_total{container!=\"\", container!=\"POD\"}[5m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory Usage by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace) (container_memory_working_set_bytes{container!=\"\", container!=\"POD\"})",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network I/O by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace) (rate(container_network_receive_bytes_total[5m]))",
          "legendFormat": "{{namespace}} RX",
          "refId": "A"
        },
        {
          "expr": "sum by (namespace) (rate(container_network_transmit_bytes_total[5m]))",
          "legendFormat": "{{namespace}} TX",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Pod Restarts by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (namespace, pod) (increase(kube_pod_container_status_restarts_total[1h])) > 0",
          "legendFormat": "{{namespace}}/{{pod}}",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["kubernetes", "cluster"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Kubernetes Cluster Overview",
  "uid": "k8s-cluster-overview"
}
