{
  "annotations": { "list": [] },
  "editable": false,
  "graphTooltip": 1,
  "panels": [
    {
      "title": "Spans Accepted / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(otelcol_receiver_accepted_spans[5m]))",
          "legendFormat": "Accepted",
          "refId": "A"
        },
        {
          "expr": "sum(rate(otelcol_receiver_refused_spans[5m]))",
          "legendFormat": "Refused",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Metric Points Accepted / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(otelcol_receiver_accepted_metric_points[5m]))",
          "legendFormat": "Accepted",
          "refId": "A"
        },
        {
          "expr": "sum(rate(otelcol_receiver_refused_metric_points[5m]))",
          "legendFormat": "Refused",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Log Records Accepted / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum(rate(otelcol_receiver_accepted_log_records[5m]))",
          "legendFormat": "Accepted",
          "refId": "A"
        },
        {
          "expr": "sum(rate(otelcol_receiver_refused_log_records[5m]))",
          "legendFormat": "Refused",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Exporter Send (Spans)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_sent_spans[5m]))",
          "legendFormat": "{{exporter}} sent",
          "refId": "A"
        },
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_send_failed_spans[5m]))",
          "legendFormat": "{{exporter}} failed",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Exporter Send (Metrics)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_sent_metric_points[5m]))",
          "legendFormat": "{{exporter}} sent",
          "refId": "A"
        },
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_send_failed_metric_points[5m]))",
          "legendFormat": "{{exporter}} failed",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Exporter Send (Logs)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_sent_log_records[5m]))",
          "legendFormat": "{{exporter}} sent",
          "refId": "A"
        },
        {
          "expr": "sum by (exporter) (rate(otelcol_exporter_send_failed_log_records[5m]))",
          "legendFormat": "{{exporter}} failed",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Queue Size",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (exporter) (otelcol_exporter_queue_size)",
          "legendFormat": "{{exporter}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Batch Processor (batch size)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "expr": "sum by (processor) (rate(otelcol_processor_batch_batch_send_size_sum[5m]) / rate(otelcol_processor_batch_batch_send_size_count[5m]))",
          "legendFormat": "{{processor}} avg batch",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Collector CPU",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "targets": [
        {
          "expr": "rate(otelcol_process_cpu_seconds[5m])",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Collector Memory",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        {
          "expr": "otelcol_process_memory_rss",
          "legendFormat": "RSS",
          "refId": "A"
        },
        {
          "expr": "otelcol_process_runtime_total_alloc_bytes",
          "legendFormat": "Total Alloc",
          "refId": "B"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["otel", "collector", "opentelemetry"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "OpenTelemetry Collector",
  "uid": "otel-collector-health"
}
